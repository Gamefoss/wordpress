append styles
	- wp_enqueue_style( 'post-block-css', get_template_directory_uri() . "/library/css/modules/post-block.css", false )
article.post-block(class!=echo('"post-block--{$options[\'variation\']} " . implode( " ", $options["class"] )'))
	a(href="#")
	.img(style!=background('"https://www.placecage.com/". rand(600, 700) ."/600"', true))
	.content
		- if ( $options['category'] ):
			a(href="#" title="category").category.badge.badge--ludokratia category
		- endif
		h2.title-2!= get_the_title()
		- if ( $options['author'] ):
			a(href="#" title="@dihgg").author
				img(src!=image('test/dihgg.png') alt="")
				| @dihgg
		- endif
