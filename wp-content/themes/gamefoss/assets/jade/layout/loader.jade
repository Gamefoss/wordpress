#loader
	.loader-content
		img(src!=image('logo/horizontal-logo.svg') alt!=echo('bloginfo("name")'))
		img(src!=image('main/loader.gif') alt!=echo('__("[:pb]Carregando...[:en]Loading...[:]")'))
	style.
		#loader {
			position: fixed;
			top:0;
			left:0;
			width: 100%;
			height: 100%;
			z-index: 11;
			display: flex;
			align-items: center;
			justify-content: center;
			background: #bbbbbb;
		}
		#loader .loader-content {
			text-align: center;
		}
		#loader img {
			display: block;
			margin: 6px auto;
		}
